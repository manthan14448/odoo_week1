<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_patient_detail_tag" model="ir.actions.act_window">
        <field name="name">patient_Detail view</field>
        <field name="res_model">patient.details</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="patient_details_view_tree" model="ir.ui.view">
        <field name="name">patient_details.view.tree</field>
        <field name="model">patient.details</field>
        <field name="arch" type="xml">
            <tree string="patient">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="patient_details_view_form" model="ir.ui.view">
        <field name="name">patient_details.view.form</field>
        <field name="model">patient.details</field>
        <field name="arch" type="xml">
            <form string="Patient Info">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="age" />
                        <field name="pre_condition" />
                    </group>
                    <field name="Appoinment_ids">
                        <tree editable="bottom">
                            <field name="visit_date" string="Visited Date" />
                            <field name="doctor_visit" string="Doctor Name" />
                            <field name="disease" string="Disease" />
                            <field name="symtoms" string="Symtoms" />
                        </tree>
                        <form>
                            <group>
                                <field name="visit_date" string="Visited Date" />
                                <field name="doctor_visit" string="Doctor Name" />
                                <field name="disease" string="Disease" />
                                <field name="symtoms" string="Symtoms" />
                            </group>

                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

</odoo>